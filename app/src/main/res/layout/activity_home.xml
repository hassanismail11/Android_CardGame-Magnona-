<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/home_back"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@mipmap/home_title" />

    <RelativeLayout
        android:id="@+id/playSoloBut"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="100dp"
        android:layout_toStartOf="@+id/playOnlineBut"
        android:background="@drawable/pp_blue_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Play Solo"
            android:lines="2"
            android:textSize="30dp"
            android:gravity="center"
            android:textAlignment="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playOnlineBut"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/pp_blue_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Play Online"
            android:lines="2"
            android:textSize="30dp"
            android:gravity="center"
            android:textAlignment="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ProfileBut"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="100dp"
        android:layout_toEndOf="@+id/playOnlineBut"
        android:background="@drawable/pp_blue_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Profile"
            android:lines="2"
            android:textSize="30dp"
            android:gravity="center"
            android:textAlignment="center"/>

    </RelativeLayout>

</RelativeLayout>